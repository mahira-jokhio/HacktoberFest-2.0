{
  "name": "recipe-generator",
  "module": "index.ts",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run tailwind:build --watch\" \"npm run server\"",
    "server": "php -S 0.0.0.0:3000 index.php",
    "tailwind:build": "npx tailwindcss -i ./css/globals.css -o ./css/styles.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.14"
  }
}
